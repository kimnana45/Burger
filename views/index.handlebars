<div class="main-container">
    <div class="header">
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>
<div>
    <div class="row justify-content-center">
        <h2>Place your order</h2>
    </div>
</div>
<div class="row justify-content-center mt-3">
    <form class="create-form justify-content-center">
        <div class="form-group">
            <div class="row">
                <textarea class="form-control" cols="30" type="text" name="burger" id="newB"></textarea>
            </div>
        </div>
        <div class="row justify-content-center">
            <button class="btn btn-info" type="submit">Let's eat!</button>
        </div>
    </form>
</div>
<div class="burgerList">
    <div class="row">
        <div class="col-md-6">
            <div>
                <h2 class="subHeading">Burgers To Eat</h2>
            </div>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <h5> {{id}} .{{burger_name}} </h5>
                    <button class="btn btn-success devour" data-id="{{id}}" data-nowdevoured="true">Done!</button>
                    <hr>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2 class="subHeading">Burgers Eaten</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <h5> {{id}} .{{burger_name}} </h5>
                    <hr>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
</div>
</div>